<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/artwork_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_view_margin"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/cardBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/artwork_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/margin_4dp"
            android:background="@color/colorPrimary"
            android:contentDescription="@string/current_artwork_description"
            android:gravity="center_horizontal"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/artwork_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed"
            android:maxLines="2"
            android:paddingStart="@dimen/padding_10dp"
            android:paddingLeft="@dimen/padding_10dp"
            android:paddingTop="@dimen/padding_10dp"
            android:paddingEnd="@dimen/padding_10dp"
            android:paddingRight="@dimen/padding_10dp"
            android:paddingBottom="@dimen/padding_6dp"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Title of Artwork with a Very Long Name Very Long Name Very Long Name" />

        <TextView
            android:id="@+id/artwork_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed"
            android:maxLines="2"
            android:paddingBottom="@dimen/padding_16dp"
            android:paddingEnd="@dimen/padding_10dp"
            android:paddingLeft="@dimen/padding_10dp"
            android:paddingRight="@dimen/padding_10dp"
            android:paddingStart="@dimen/padding_10dp"
            android:textAllCaps="true"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            tools:text="Title of Artwork" />

    </LinearLayout>
</android.support.v7.widget.CardView>